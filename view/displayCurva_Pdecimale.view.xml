<mvc:View xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:viz="sap.viz.ui5.controls" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds" xmlns:viz.data="sap.viz.ui5.data" xmlns:html="http://www.w3.org/1999/xhtml"
	controllerName="stipAdmin.stipAdmin.controller.displayCurva_Pdecimale">
	<App>
		<pages>
			<Page title="Title">
				<customHeader>
					<Bar>
						<contentMiddle>
							<Title text="Display Curva Pdecimale"/>
						</contentMiddle>
					</Bar>
				</customHeader>
				<content>
					<!--- table section-->
						<ScrollContainer width="100%" height="50%" vertical="true" horizontal="true" focusable="true">
					<Table id="tbl" items="{displayCurveLinearModel>/}">
						<columns>
							<Column minScreenWidth="Tablet" demandPopin="true">
								<Label textAlign="Center" design="Bold" required="true" text="% Performance"/>
							</Column>
							<Column minScreenWidth="Tablet" demandPopin="true">
								<Label required="true" textAlign="Center" design="Bold" text="% Payout"/>
							</Column>
						</columns>
						<items>
							<ColumnListItem>
								<cells>
									<Input xmlns="sap.m" editable="false" value="{displayCurveLinearModel>VALORE_CURVA}%" textAlign="Center"/>
									<Input xmlns="sap.m" editable="false" value="{displayCurveLinearModel>PERC_MBO}%" textAlign="Center"/>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
						</ScrollContainer>
					<Label width="100%" id="label2"/>
					<Label width="100%" id="label3"/>
					<l:Grid defaultSpan="L12">
						<l:content>
							<viz:VizFrame xmlns="sap.viz" id="idcolumn" uiConfig="{applicationSet:'fiori'}" width="100%" vizType='line'
								vizProperties="{plotArea: { drawingEffect: 'glossy','colorPalette': 'RED'}, dataLabel:{visible:true,showTotal:true}}">
								<viz:dataset>
									<viz.data:FlattenedDataset data="{displayCurveLinearModel>/}">
										<viz.data:dimensions>
											<viz.data:DimensionDefinition name="%Performance" value="{displayCurveLinearModel>VALORE_CURVA}"/>
										</viz.data:dimensions>
										<viz.data:measures>
											<viz.data:MeasureDefinition name="%Payout" value="{displayCurveLinearModel>PERC_MBO}"/>
											<!--	<viz.data:MeasureDefinition name="% Payout" value="{displayCurveLinearModel>PERC_MBO}"/> -->
										</viz.data:measures>
									</viz.data:FlattenedDataset>
								</viz:dataset>
								<viz:feeds>
									<viz.feeds:FeedItem uid="valueAxis" type="Measure" values="%Payout"/>
									<viz.feeds:FeedItem uid="categoryAxis" type="Dimension" values="%Performance"/>
								</viz:feeds>
							</viz:VizFrame>
						</l:content>
					</l:Grid>
				</content>
				<Toolbar>
					<ToolbarSpacer/>
					
					<Button xmlns="sap.m" width="200px" text="Annulla" id="button1" press="cancel"/>
					<ToolbarSpacer/>
				</Toolbar>
			</Page>
		</pages>
	</App>
</mvc:View>