						<columns>
							<Column>
								<Label text="Additivo"/>
							</Column>
							<Column>
								<Label text="Soglia"/>
							</Column>
						</columns>
						<ColumnListItem>
							<Select id="Additivo" width="80%" enabled="false" items="{AdditivoModel>/}">
								<items>
									<core:Item key="{AdditivoModel>ID_TIPOADDITIVO}" text="{AdditivoModel>DESCR_ADDITIVO}"/>
