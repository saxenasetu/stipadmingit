												<core:Item key="{GateModel>ID_GATE}" text="{GateModel>DESCR_GATE}"/>
											</items>
										</Select>
										<Input width="98%" value="{PisteModel>DESCR_SOTTOPISTA}" enabled="false"/>
										<Input width="98%" value="{PisteModel>Obiettivo}" visible="{PisteModel>ObiettivoEnable}" enabled="false"/>
										<Input width="98%" value="{PisteModel>Consuntivo}" visible="{PisteModel>ConsuntivoEnable}" enabled="false" showValueHelp="false" valueHelpRequest="onConsuntivoValueHelp"/>
										<Select width="98%" selectedKey="{PisteModel>SN_Consuntivo_Perc}" enabled="false">
											<items>
												<core:Item key="E" text="€" />
												<core:Item key="K" text="K€"/>
												<core:Item key="%" text="%"/>
												<core:Item key="Q" text="Quantità"/>
											</items>
										</Select>
										<Input width="98%" value="{PisteModel>ObiettivoSimulato}" visible="{PisteModel>ObiettivoSimulatoEnable}" enabled="false"/>
										<Input width="98%" value="{PisteModel>ConsuntivoSimulato}" visible="{PisteModel>ConsuntivoSimulatoEnable}" enabled="false" showValueHelp="false" valueHelpRequest="onConsuntivoSimulatoValueHelp"/>
										
