<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	controllerName="stipAdmin.stipAdmin.controller.modCurvaDescrittiva" xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page title="Modifica Curva Descrittiva" titleAlignment="Center">
				<content>
					<Table>
						<columns>
							<Column>
								<Label required="true" text="Descrizione"/>
							</Column>
						</columns>
						<ColumnListItem>
							<Input id="desc"/>
						</ColumnListItem>
					</Table>
				</content>
				<Toolbar>
					<ToolbarSpacer/>
					<Button xmlns="sap.m" width="200px" text="Salva" id="Salva" press="saveCurve"/>
					<!--delete button added-->
					<Button xmlns="sap.m" width="200px" text="Elimina" id="deleteCurveButton" press="deleteCurveFn"/>
					<Button xmlns="sap.m" width="200px" text="Annulla" id="button1" press="cancel"/>
					<ToolbarSpacer/>
				</Toolbar>
			</Page>
		</pages>
	</App>
</mvc:View>